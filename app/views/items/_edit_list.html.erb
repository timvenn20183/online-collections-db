<table class="table table-hover">
<thead>
    <th>
        ID
    </th>
    <th>
        Name
    </th>
    <th>
        Ref / Serial no.
    </th>
    <th>
        Action
    </th>
</thead>
<tbody>
    <% if @items != nil and @items.count > 0 then %>
    <% @items.each do |item| %>
        <tr <%=raw "class='success'" if defined? @id and item.id.to_s == @id %>>
            <td>
                <%= item.collection_id %>
            </td>
            <td width=70%>
                <%= item.name %>
            </td>
            <td>
                <%= item.reference_number %>
            </td>
            <td>
                <% geturl = url_for :controller => 'items', :action => 'edit', :id => encrypt(item.id) %>
                <button onclick="$.ajax({url : '<%= geturl %>'});" type="button" class="btn btn-mini btn-info" style="width:75px;">Edit</button>
            </td>
        </tr>
    <% end %>
    <% else %>
        <tr>
            <td>
                &nbsp;
            </td>
            <td width=70%>
                &nbsp;
            </td>
            <td>
                &nbsp;
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
    <% end %>
</tbody>
</table>
