<div id="notice_bar">
<div class="alert alert-info">
<%= render :partial => 'settings/about_help' %>
</div>
<div style="float:right;">
           <% geturl = url_for :controller => 'settings', :action => 'about_on_menu' %>
            Show on main menu
            <div class="switch switch-mini" data-on="success" data-off="warning">
            <input type="checkbox" <%=raw ' checked ' if current_site.show_about %>" onchange="$.ajax ({url : '<%= geturl %>' });">
</div>
<br/><br/>
</div>
<%= form_tag({:controller => :settings, :action => :about_update}, :remote => true, :id => 'about_update' , :authenticity_token => form_authenticity_token ) do |f| %>

    <textarea name="about" id="about" style="width:99%; height:500px;"><%= @about.content %></textarea>
    <br/>
    <div>
        <button onclick="$('#about_update').submit();return false;" class="btn btn-primary" type="b
utton" id="save_button">Update</button>
    </div>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $('.switch')['bootstrapSwitch']();
    });
</script>
