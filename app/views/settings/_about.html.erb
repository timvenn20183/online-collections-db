<div id="notice_bar">
<div class="alert alert-info">
<%= render :partial => 'settings/about_help' %>
</div>
</div>
<%= form_tag({:controller => :settings, :action => :about_update}, :remote => true, :id => 'about_update' , :authenticity_token => form_authenticity_token ) do |f| %>

    <textarea name="about" id="about" style="width:95%; height:300px;"><%= @about.content %></textarea>
    <br/>
    <div align="right">
        <button onclick="$('#about_update').submit();return false;" class="btn btn-primary btn-mini" type="button" id="save_button">Update</button>
    </div>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $('.switch')['bootstrapSwitch']();
    });
</script>
